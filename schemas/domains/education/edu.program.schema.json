{
  "$id": "https://raw.githubusercontent.com/civic-interconnect/civic-interconnect/main/schemas/domains/education/edu.program.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Education Program",
  "type": "object",

  "properties": {
    "entityTypeUri": { "const": "cep:entity:edu:program" },

    "programName": { "type": "string" },
    "institutionRef": { "type": "string" },
    "jurisdictionUri": { "type": "string" },

    "identifiers": {
      "type": "object",
      "properties": {
        "cipCode": { "type": "string" },
        "programCode": { "type": "string" }
      },
      "additionalProperties": false
    },

    "delivery": {
      "type": "object",
      "properties": {
        "modalityUri": { "type": "string" },
        "programLevelUri": { "type": "string" }
      },
      "additionalProperties": false
    }
  },

  "required": ["entityTypeUri", "programName", "institutionRef", "jurisdictionUri"]
}
