{
  "$id": "https://raw.githubusercontent.com/civic-interconnect/civic-interconnect/main/schemas/domains/education/edu.institution.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Education Institution",
  "type": "object",

  "properties": {
    "entityTypeUri": { "const": "cep:entity:edu:institution" },

    "institutionName": { "type": "string" },
    "jurisdictionUri": { "type": "string" },

    "identifiers": {
      "type": "object",
      "properties": {
        "ipedsUnitId": { "type": "string" },
        "opeid": { "type": "string" }
      },
      "additionalProperties": false
    },

    "location": {
      "type": "object",
      "properties": {
        "street": { "type": "string" },
        "city": { "type": "string" },
        "stateProvince": { "type": "string" },
        "postalCode": { "type": "string" },
        "countryCode": { "type": "string" }
      },
      "additionalProperties": false
    }
  },

  "required": ["entityTypeUri", "institutionName", "jurisdictionUri"]
}
