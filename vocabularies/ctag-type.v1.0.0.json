{
  "$id": "https://raw.githubusercontent.com/civic-interconnect/civic-interconnect/main/vocabularies/ctag-type.v1.0.0.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "CEP CTag Type Vocabulary",
  "description": "Controlled vocabulary for Context Tags (CTags). CTags express interpretive, analytic, or contextual facts about CEP records without changing their canonical identity or payload.",
  "type": "object",
  "properties": {
    "vocabularyUri": {
      "type": "string",
      "format": "uri"
    },
    "version": {
      "type": "string"
    },
    "title": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "terms": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "termUri": {
            "type": "string",
            "format": "uri"
          },
          "code": {
            "type": "string",
            "description": "Machine-readable code for this CTag type."
          },
          "label": {
            "type": "string",
            "description": "Human-readable label."
          },
          "definition": {
            "type": "string",
            "description": "Precise definition of what this tag means."
          },
          "status": {
            "type": "string",
            "enum": ["active", "deprecated", "experimental"],
            "default": "active"
          },
          "addedInVersion": {
            "type": "string",
            "description": "First vocabulary version this term appeared in."
          },
          "seeAlso": {
            "type": "array",
            "items": { "type": "string", "format": "uri" },
            "description": "Optional related term URIs."
          }
        },
        "required": ["termUri", "code", "label", "definition", "status", "addedInVersion"],
        "additionalProperties": false
      }
    }
  },
  "required": ["vocabularyUri", "version", "title", "description", "terms"],
  "additionalProperties": false,
  "examples": [
    {
      "vocabularyUri": "https://raw.githubusercontent.com/civic-interconnect/civic-interconnect/main/vocabularies/ctag-type.v1.0.0.json",
      "version": "1.0.0",
      "title": "CEP CTag Type Vocabulary",
      "description": "Initial set of context tag types for risk, analysis, quality, and narrative annotations.",
      "terms": [
        {
          "termUri": "https://raw.githubusercontent.com/civic-interconnect/civic-interconnect/main/vocabularies/ctag-type.v1.0.0.json#risk.flag.potential_shell",
          "code": "risk.flag.potential_shell",
          "label": "Potential Shell Entity",
          "definition": "Flag indicating that this entity exhibits transaction patterns consistent with a shell organization (for example, funds passing through without operational activity).",
          "status": "active",
          "addedInVersion": "1.0.0",
          "seeAlso": []
        },
        {
          "termUri": "https://raw.githubusercontent.com/civic-interconnect/civic-interconnect/main/vocabularies/ctag-type.v1.0.0.json#analysis.cluster.membership",
          "code": "analysis.cluster.membership",
          "label": "Cluster Membership",
          "definition": "Indicates that the record participates in an inferred cluster (for example, community detection or similarity clustering). The value field typically carries a cluster identifier.",
          "status": "active",
          "addedInVersion": "1.0.0",
          "seeAlso": []
        },
        {
          "termUri": "https://raw.githubusercontent.com/civic-interconnect/civic-interconnect/main/vocabularies/ctag-type.v1.0.0.json#quality.issue.incomplete_address",
          "code": "quality.issue.incomplete_address",
          "label": "Incomplete Address",
          "definition": "Data quality flag for records where address fields are present but incomplete for operational or analytic use.",
          "status": "active",
          "addedInVersion": "1.0.0",
          "seeAlso": []
        },
        {
          "termUri": "https://raw.githubusercontent.com/civic-interconnect/civic-interconnect/main/vocabularies/ctag-type.v1.0.0.json#narrative.highlight.key_actor",
          "code": "narrative.highlight.key_actor",
          "label": "Key Actor Highlight",
          "definition": "Marks this entity or relationship as a key actor within a specific investigation, story, or analytic report.",
          "status": "active",
          "addedInVersion": "1.0.0",
          "seeAlso": []
        }
      ]
    }
  ]
}
